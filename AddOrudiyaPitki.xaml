<Window x:Class="DyavolskiiKontrol.AddOrudiyaPitki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DyavolskiiKontrol"
        mc:Ignorable="d"
        Title="AddOrudiyaPitki" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Введите названия орудия пытки"/>
        <TextBox Grid.Row="1"/>
        <Label Content="Введите год покупки орудия пытки" Grid.Row="2"/>
        <TextBox Grid.Row="3"/>
        <Label Content="Введите максимальное кол-во использований орудия пытки" Grid.Row="4"/>
        <TextBox Grid.Row="5"/>
        <Label Content="Введите текущее кол-во использований орудия пытки" Grid.Row="6"/>
        <TextBox Grid.Row="7"/>
        <Button Content="Добавить орудие пытки" Grid.Row="8"/>
    </Grid>
</Window>
