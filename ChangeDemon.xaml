<Window x:Class="DyavolskiiKontrol.ChangeDemon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DyavolskiiKontrol"
        mc:Ignorable="d"
        Title="ChangeDemon" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Исправьте погоняло чорта"/>
        <TextBox Grid.Row="1"/>
        <Label Content="Исправьте срок службы чорта" Grid.Row="2"/>
        <TextBox Grid.Row="3"/>
        <Label Content="Исправьте дату найма чорта" Grid.Row="4"/>
        <TextBox Grid.Row="5"/>
        <Button Grid.Row="6" Content="Сохранить изменения"/>
    </Grid>
</Window>
