<Window x:Class="DyavolskiiKontrol.AddDemon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DyavolskiiKontrol"
        mc:Ignorable="d"
        Title="AddDemon" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="3" DataContext="{Binding Devil}">
            <Label Content="Введите имя дэмона"/>
            <TextBox/>
            <Label Content="Введите кол-во лет службы"/>
            <TextBox/>
            <Label Content="Введите год найма на службу"/>
            <TextBox/>
            <Button Content="Добавить дэмона"/>
        </StackPanel>
    </Grid>
</Window>
